<h1 align="center">All Bloggers</h1>
<div align="center">
<% @users.each do |user| %>
<div class="row">
  <div class="well col-md-4 col-md-offset-4">
      <ul class="user-info">
        <li><%= link_to gravatar_for(user, size: 100), user_path(user) %></li>
        <li><%= link_to user.username, user_path(user) %></li>
        <li><small><%= pluralize(user.articles.count, "article") %></small></li>
      </ul>
  </div>
</div>
<% end %>
</div>
