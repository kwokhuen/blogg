<h1 align="center"><%= @user.username.capitalize %>'s Blogg</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>
<h4 align="center"><%= @user.username.capitalize %>'s articles</h4>
<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= render 'articles/article', object: @user.articles %>
    </div>
  </div>
</div>
